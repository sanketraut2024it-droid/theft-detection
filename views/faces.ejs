  <div class="container">
    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <div class="card">
      <h2>‚ûï Add New Face</h2>
      <p style="color: #666; margin-bottom: 1rem;">Capture a clear photo of the person's face to add them to the recognition database.</p>
      
      <div class="video-container">
        <video id="video" autoplay playsinline></video>
        <canvas id="canvas" style="display: none;"></canvas>
      </div>

      <div id="faceStatus" class="status status-loading">Loading face detection models...</div>
      
      <div id="deepFaceStatus" style="margin: 1rem 0; padding: 1rem; background: #f3f4f6; border-radius: 8px; display: none;">
        <div id="deepFaceInfo" style="margin-bottom: 0.5rem;"></div>
        <label style="display: flex; align-items: center; cursor: pointer;">
          <input type="checkbox" id="useDeepFace" style="margin-right: 0.5rem; width: 20px; height: 20px; cursor: pointer;">
          <span style="color: #333; font-weight: 500;">Use DeepFace for enhanced recognition</span>
        </label>
        <p style="color: #666; font-size: 0.9rem; margin-top: 0.5rem; margin-left: 1.75rem;">
          DeepFace provides more accurate face recognition with age, gender, and emotion analysis
        </p>
      </div>

      <form id="addFaceForm">
        <div class="form-group">
          <label for="faceName">Person Name *</label>
          <input type="text" id="faceName" name="name" placeholder="Enter person's name" required>
        </div>

        <div class="form-group">
          <label for="faceDescription">Description (Optional)</label>
          <textarea id="faceDescription" name="description" rows="3" placeholder="Add any notes about this person"></textarea>
        </div>

        <button type="button" class="btn btn-success" id="captureBtn">üì∏ Capture Face</button>
        <button type="submit" class="btn" id="saveBtn" disabled>üíæ Save to Database</button>
      </form>

      <div id="preview" style="margin-top: 1rem; display: none;">
        <p style="font-weight: bold; margin-bottom: 0.5rem;">Preview:</p>
        <img id="previewImage" style="max-width: 200px; border: 3px solid #667eea; border-radius: 8px;">
      </div>
    </div>

    <div class="card">
      <h2>üìã Known Faces (<%= faces ? faces.length : 0 %>)</h2>
      
      <% if (faces && faces.length > 0) { %>
        <div class="faces-grid">
          <% faces.forEach(face => { %>
            <div class="face-card">
              <img src="<%= face.image %>" alt="<%= face.name %>">
              <h3><%= face.name %></h3>
              <% if (face.description) { %>
                <p><%= face.description %></p>
              <% } %>
              <p style="color: #999; font-size: 0.8rem;">
                <% if (face.lastSeen) { %>
                  Last seen: <%= new Date(face.lastSeen).toLocaleString() %>
                <% } else { %>
                  Never seen
                <% } %>
              </p>
              <button class="btn btn-danger" onclick="deleteFace('<%= face._id %>', '<%= face.name %>')">Delete</button>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p style="color: #666; text-align: center; padding: 2rem;">No faces in database yet. Add faces above to enable recognition.</p>
      <% } %>
    </div>
  </div>

  <script>
    let modelsLoaded = false;
    let currentDescriptor = null;
    let currentImage = null;

    // Wait for face-api.js to be loaded
    async function waitForFaceAPI() {
      let attempts = 0;
      const maxAttempts = 100; // 10 seconds max wait (increased for slower connections)
      
      while (typeof faceapi === 'undefined' && attempts < maxAttempts) {
        await new Promise(resolve => setTimeout(resolve, 100));
        attempts++;
      }
      
      if (typeof faceapi === 'undefined') {
        console.error('face-api.js not loaded after', maxAttempts * 100, 'ms');
        return false;
      }
      
      // Additional check to ensure faceapi is fully initialized
      if (!faceapi.nets) {
        console.warn('face-api.js loaded but nets not available, waiting...');
        await new Promise(resolve => setTimeout(resolve, 1000));
        if (!faceapi.nets) {
          console.error('face-api.js nets still not available after additional wait');
          return false;
        }
      }
      
      console.log('‚úÖ face-api.js is ready');
      return true;
    }

    // Load face-api.js models with retry logic
    async function loadModels() {
      const statusEl = document.getElementById('faceStatus');
      statusEl.textContent = 'Loading face detection library...';
      statusEl.className = 'status status-loading';

      // First, wait for face-api.js to be available
      const faceAPILoaded = await waitForFaceAPI();
      
      if (!faceAPILoaded) {
        console.error('face-api.js library not loaded');
        statusEl.textContent = '‚ùå Face detection library not available. Please refresh the page.';
        statusEl.className = 'status status-error';
        startCamera();
        return;
      }

      statusEl.textContent = 'Loading face detection models...';
      statusEl.className = 'status status-loading';

      // Try multiple CDN sources with correct paths
      const cdnSources = [
        {
          base: 'https://cdn.jsdelivr.net/npm/@vladmandic/face-api@1.6.9/model',
          name: 'jsDelivr (vladmandic fork)'
        },
        {
          base: 'https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/weights',
          name: 'jsDelivr (original)'
        },
        {
          base: 'https://unpkg.com/face-api.js@0.22.2/weights',
          name: 'unpkg'
        },
        {
          base: 'https://raw.githubusercontent.com/justadudewhohacks/face-api.js/master/weights',
          name: 'GitHub raw'
        }
      ];

      let loaded = false;
      let lastError = null;

      for (const cdnSource of cdnSources) {
        try {
          console.log(`Trying to load models from: ${cdnSource.name} (${cdnSource.base})`);
          
          // Try loading with TinyFaceDetector first (smaller, faster to load)
          try {
            await faceapi.nets.tinyFaceDetector.loadFromUri(cdnSource.base);
            console.log('‚úÖ TinyFaceDetector loaded');
          } catch (tinyError) {
            console.warn('TinyFaceDetector failed:', tinyError.message);
            throw new Error('TinyFaceDetector failed');
          }

          // Load essential models
          const loadPromise = Promise.all([
            // Face landmarks for better recognition
            faceapi.nets.faceLandmark68Net.loadFromUri(cdnSource.base).catch(err => {
              console.warn('FaceLandmark68Net failed, continuing...');
              return null;
            }),
            // Face recognition model (generates 128-dimensional face descriptors)
            faceapi.nets.faceRecognitionNet.loadFromUri(cdnSource.base).catch(err => {
              console.warn('FaceRecognitionNet failed, continuing...');
              return null;
            })
          ]);

          // Add timeout of 60 seconds (models can be large)
          const timeoutPromise = new Promise((_, reject) => 
            setTimeout(() => reject(new Error('Model loading timeout')), 60000)
          );

          await Promise.race([loadPromise, timeoutPromise]);

          // Try to load SSD MobileNet V1 (optional, for better accuracy)
          try {
            await faceapi.nets.ssdMobilenetv1.loadFromUri(cdnSource.base);
            console.log('‚úÖ SSD MobileNet V1 loaded');
          } catch (ssdError) {
            console.warn('SSD MobileNet V1 failed to load (optional):', ssdError.message);
          }

          // Try to load age/gender models (optional)
          try {
            await faceapi.nets.ageGenderNet.loadFromUri(cdnSource.base);
            console.log('‚úÖ Age/Gender models loaded');
          } catch (ageError) {
            console.warn('Age/Gender models failed to load (optional):', ageError.message);
          }

          modelsLoaded = true;
          statusEl.textContent = '‚úÖ Models loaded! Ready to detect faces';
          statusEl.className = 'status status-ready';
          console.log('‚úÖ Face detection models loaded successfully from', cdnSource.name);
          loaded = true;
          break;
        } catch (error) {
          console.warn(`Failed to load from ${cdnSource.name}:`, error.message);
          lastError = error;
          continue;
        }
      }

      if (!loaded) {
        console.error('All CDN sources failed. Last error:', lastError);
        statusEl.textContent = '‚ö†Ô∏è Models unavailable. Using DeepFace backend for face detection.';
        statusEl.className = 'status status-error';
        // Still start camera - can use DeepFace instead
      }

      startCamera();
    }

    // Start camera
    async function startCamera() {
      try {
        const stream = await navigator.mediaDevices.getUserMedia({ video: true });
        const video = document.getElementById('video');
        video.srcObject = stream;
      } catch (error) {
        console.error('Camera error:', error);
        alert('Error accessing camera: ' + error.message);
      }
    }

    // Capture face
    document.getElementById('captureBtn').addEventListener('click', async () => {
      if (!modelsLoaded) {
        alert('Face detection models are still loading. Please wait...');
        return;
      }

      const video = document.getElementById('video');
      const canvas = document.getElementById('canvas');
      const ctx = canvas.getContext('2d');

      // Set canvas dimensions
      canvas.width = video.videoWidth;
      canvas.height = video.videoHeight;

      // Draw video frame to canvas
      ctx.drawImage(video, 0, 0, canvas.width, canvas.height);

      // Detect faces - try multiple detection methods
      let detections = [];
      
      try {
        // Try SSD MobileNet V1 first (if loaded)
        if (faceapi.nets.ssdMobilenetv1 && faceapi.nets.ssdMobilenetv1.isLoaded) {
          try {
            detections = await faceapi
              .detectAllFaces(video, new faceapi.SsdMobilenetv1Options({ minConfidence: 0.5 }))
              .withFaceLandmarks()
              .withFaceDescriptors();
          } catch (ssdError) {
            console.warn('SSD MobileNet detection failed, trying TinyFaceDetector:', ssdError);
          }
        }
        
        // Fallback to TinyFaceDetector if SSD failed or not loaded
        if (detections.length === 0 && faceapi.nets.tinyFaceDetector && faceapi.nets.tinyFaceDetector.isLoaded) {
          try {
            detections = await faceapi
              .detectAllFaces(video, new faceapi.TinyFaceDetectorOptions({ inputSize: 320, scoreThreshold: 0.5 }))
              .withFaceLandmarks()
              .withFaceDescriptors();
          } catch (tinyError) {
            console.warn('TinyFaceDetector failed:', tinyError);
          }
        }
        
        // Try with age/gender if available
        if (detections.length > 0 && faceapi.nets.ageGenderNet && faceapi.nets.ageGenderNet.isLoaded) {
          try {
            detections = await faceapi
              .detectAllFaces(video, detections[0].detection ? 
                new faceapi.TinyFaceDetectorOptions({ inputSize: 320, scoreThreshold: 0.5 }) :
                new faceapi.SsdMobilenetv1Options({ minConfidence: 0.5 }))
              .withFaceLandmarks()
              .withFaceDescriptors()
              .withAgeAndGender();
          } catch (ageError) {
            console.warn('Age/Gender detection failed, using basic detection:', ageError);
          }
        }
      } catch (error) {
        console.error('Face detection error:', error);
        alert('Face detection failed. Please try again or use DeepFace option.');
        return;
      }

      if (detections.length === 0) {
        alert('No face detected. Please ensure your face is clearly visible.');
        return;
      }

      if (detections.length > 1) {
        alert('Multiple faces detected. Please ensure only one face is visible.');
        return;
      }

      // Get the first (and only) face
      const detection = detections[0];
      currentDescriptor = Array.from(detection.descriptor);
      currentImage = canvas.toDataURL('image/jpeg');

      // Extract age and gender if available
      let ageGenderInfo = '';
      if (detection.age !== undefined && detection.gender !== undefined) {
        ageGenderInfo = `\nDetected: ${detection.gender} (Age: ~${Math.round(detection.age)})`;
      }

      // Show preview
      document.getElementById('previewImage').src = currentImage;
      document.getElementById('preview').style.display = 'block';
      document.getElementById('saveBtn').disabled = false;

      // Draw detection box and landmarks on canvas
      const box = detection.detection.box;
      ctx.strokeStyle = '#00ff00';
      ctx.lineWidth = 2;
      ctx.strokeRect(box.x, box.y, box.width, box.height);
      
      // Draw landmarks
      if (detection.landmarks) {
        ctx.fillStyle = '#00ff00';
        detection.landmarks.positions.forEach(point => {
          ctx.beginPath();
          ctx.arc(point.x, point.y, 2, 0, 2 * Math.PI);
          ctx.fill();
        });
      }
      
      // Display age and gender info
      if (ageGenderInfo) {
        ctx.fillStyle = '#ffffff';
        ctx.font = '16px Arial';
        ctx.fillText(ageGenderInfo.trim(), box.x, box.y - 10);
      }
      
      alert(`Face captured successfully!${ageGenderInfo}\nFill in the name and click Save.`);
    });

    // Save face to database
    document.getElementById('addFaceForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const name = document.getElementById('faceName').value.trim();
      if (!name) {
        alert('Please enter a name.');
        return;
      }

      const description = document.getElementById('faceDescription').value.trim();
      const useDeepFace = document.getElementById('useDeepFace').checked;
      const currentImage = document.getElementById('previewImage').src;

      // If using DeepFace, we don't need the descriptor from face-api.js
      // DeepFace will extract it from the image
      if (useDeepFace) {
        if (!currentImage) {
          alert('Please capture a face first.');
          return;
        }

        // Show loading
        const saveBtn = document.getElementById('saveBtn');
        const originalText = saveBtn.textContent;
        saveBtn.disabled = true;
        saveBtn.textContent = 'Processing with DeepFace...';

        try {
          const response = await fetch('/api/faces', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              name: name,
              image: currentImage,
              description: description,
              useDeepFace: true
            })
          });

          const data = await response.json();

          if (data.success) {
            let message = 'Face added successfully!';
            if (data.face.analysis) {
              const analysis = data.face.analysis;
              message += `\n\nAnalysis:\n`;
              if (analysis.age) message += `Age: ~${analysis.age} years\n`;
              if (analysis.gender) message += `Gender: ${analysis.gender}\n`;
            }
            alert(message);
            location.reload();
          } else {
            alert('Error: ' + data.error);
            saveBtn.disabled = false;
            saveBtn.textContent = originalText;
          }
        } catch (error) {
          console.error('Error saving face:', error);
          alert('Error saving face. Please try again.');
          saveBtn.disabled = false;
          saveBtn.textContent = originalText;
        }
      } else {
        // Use face-api.js method
        if (!currentDescriptor || !currentImage) {
          alert('Please capture a face first.');
          return;
        }

        try {
          const response = await fetch('/api/faces', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              name: name,
              descriptor: currentDescriptor,
              image: currentImage,
              description: description,
              useDeepFace: false
            })
          });

          const data = await response.json();

          if (data.success) {
            alert('Face added successfully!');
            location.reload();
          } else {
            alert('Error: ' + data.error);
          }
        } catch (error) {
          console.error('Error saving face:', error);
          alert('Error saving face. Please try again.');
        }
      }
    });

    // Delete face
    async function deleteFace(id, name) {
      if (!confirm(`Are you sure you want to delete ${name} from the database?`)) {
        return;
      }

      try {
        const response = await fetch(`/api/faces/${id}`, {
          method: 'DELETE'
        });

        const data = await response.json();

        if (data.success) {
          alert('Face deleted successfully!');
          location.reload();
        } else {
          alert('Error: ' + data.error);
        }
      } catch (error) {
        console.error('Error deleting face:', error);
        alert('Error deleting face. Please try again.');
      }
    }

    // Check DeepFace availability
    async function checkDeepFace() {
      try {
        const response = await fetch('/api/deepface/health');
        const data = await response.json();
        
        const deepFaceStatus = document.getElementById('deepFaceStatus');
        const deepFaceInfo = document.getElementById('deepFaceInfo');
        
        if (data.success && data.available) {
          deepFaceStatus.style.display = 'block';
          deepFaceInfo.innerHTML = `
            <div style="color: #059669; font-weight: bold; margin-bottom: 0.5rem;">
              ‚úÖ DeepFace is available (Model: ${data.model || 'VGG-Face'}, Detector: ${data.detector || 'opencv'})
            </div>
          `;
          document.getElementById('useDeepFace').disabled = false;
        } else {
          deepFaceStatus.style.display = 'block';
          deepFaceInfo.innerHTML = `
            <div style="color: #dc2626; font-weight: bold; margin-bottom: 0.5rem;">
              ‚ö†Ô∏è DeepFace is not available. Please start the Python backend server.
            </div>
            <p style="color: #666; font-size: 0.85rem; margin-top: 0.25rem;">
              Run: <code style="background: #e5e7eb; padding: 0.2rem 0.4rem; border-radius: 4px;">python python_api.py</code>
            </p>
          `;
          document.getElementById('useDeepFace').disabled = true;
        }
      } catch (error) {
        console.error('Error checking DeepFace:', error);
        const deepFaceStatus = document.getElementById('deepFaceStatus');
        deepFaceStatus.style.display = 'block';
        document.getElementById('deepFaceInfo').innerHTML = `
          <div style="color: #dc2626; font-weight: bold; margin-bottom: 0.5rem;">
            ‚ö†Ô∏è DeepFace is not available
          </div>
        `;
        document.getElementById('useDeepFace').disabled = true;
      }
    }

    // Initialize on page load
