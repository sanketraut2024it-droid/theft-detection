  <div class="gallery">
    <% if (captures.length === 0) { %>
      <p>No captures yet!</p>
    <% } else { %>
      <% captures.forEach(capture => { %>
        <img src="<%= capture.image %>" alt="Captured Image" />
      <% }) %>
    <% } %>
  </div>
  <button onclick="window.location.href='/home'">ğŸ  Back to Home</button>
</body>
</html>
