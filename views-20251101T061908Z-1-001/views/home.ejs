<!DOCTYPE html>
<html>
<head>
  <title>Theft Detection</title>
  <style>
    body {
      background: #111;
      color: #fff;
      text-align: center;
      font-family: sans-serif;
    }
    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 30px;
      background-color: #222;
    }
    .username {
      font-size: 18px;
      color: #00bfff;
      font-weight: bold;
    }
    .btn-group {
      display: flex;
      gap: 10px;
    }
    .top-btn {
      background: #00bfff;
      border: none;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
    }
    .top-btn:hover {
      background: #0090cc;
    }
    video {
      width: 480px;
      height: 360px;
      border: 4px solid #00bfff;
      border-radius: 12px;
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <div class="top-bar">
    <div class="username">üë§ Welcome, <%= user ? user.name : "User" %></div>
    <div class="btn-group">
      <button class="top-btn" onclick="window.location.href='/gallery'">üì∏ View Gallery</button>
      <button class="top-btn" onclick="window.location.href='/'">üö™ Sign Out</button>
    </div>
  </div>

  <h1>Theft Detection System</h1>

  <video id="cam" autoplay></video>
  <div id="msg">üîç Monitoring...</div>

  <audio id="alertSound" src="/sounds/alert.mp3"></audio>

  <script src="/script.js"></script>

  <script>
  async function checkForNewCaptures() {
    try {
      const res = await fetch('/api/check-new');
      const data = await res.json();

      if (data.newCapture) {
        console.log('üö® Motion detected!');
        const sound = document.getElementById('alertSound');

        // Try playing the sound
        sound.play().catch(err => {
        });

        // Also show website alert
        alert('Motion Detected! theft detected!');
      }
    } catch (err) {
      console.error(err);
    }
  }

  // Ask user to enable sound on page load
  // document.body.addEventListener('click', () => {
  //   const sound = document.getElementById('alertSound');
  //   sound.play().then(() => {
  //     sound.pause();
  //     sound.currentTime = 0;
  //     console.log('üîä Sound permission enabled');
  //   });
  // }, { once: true });

  // Check every 5 seconds
  setInterval(checkForNewCaptures, 5000);
</script>

</body>
</html>
